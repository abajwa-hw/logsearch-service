<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration>
  <property>
    <name>solr_service_logs_enable</name>
    <value>true</value>
    <description>Enable service logs to Solr</description>
  </property> 

  <property>
    <name>solr_audit_logs_enable</name>
    <value>true</value>
    <description>Enable audit logs to Solr</description>
  </property> 

  <property>
    <name>kafka_service_logs_enable</name>
    <value>false</value>
    <description>Enable service logs to Kafka</description>
  </property> 

  <property>
    <name>kafka_topic_service_logs</name>
    <value>service_logs</value>
    <description>Kafka topic for service logs</description>
  </property> 

  <property>
    <name>kafka_audit_logs_enable</name>
    <value>false</value>
    <description>Enable audit logs to Kafka</description>
  </property> 

  <property>
    <name>kafka_topic_audit_logs</name>
    <value>audit_logs</value>
    <description>Kafka topic for audit logs</description>
  </property> 


  <property>
    <name>kafka_broker_list</name>
    <value>NONE</value>
    <description>List of brokers. e.g. broker1_host:port,broker2_host:port</description>
  </property> 

  <property>
    <name>kafka_security_protocol</name>
    <value>NONE</value>
    <description>If security is enabled, then set this value. E.g. SASL_PLAINTEXT</description>
  </property> 

  <property>
    <name>kafka_kerberos_service_name</name>
    <value>NONE</value>
    <description>If security is enabled, then set this value. E.g. kafka</description>
  </property> 

</configuration>
